{
  "name": "pawn",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "generate-types": "cd ../src-tauri && cargo run --bin generate_types",
    "generate-bindings": "cd src-tauri && cargo run --bin generate_bindings",
    "predev": "npm run generate-bindings",
    "dev": "vite",
    "prebuild": "npm run generate-bindings",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "prepare": "husky",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:backend": "cd src-tauri && cargo fmt",
    "format:backend:check": "cd src-tauri && cargo fmt -- --check",
    "format:all": "npm run format && npm run format:backend",
    "format:all:check": "npm run format:check && npm run format:backend:check",
    "type-check": "tsc --noEmit",
    "pre-commit": "npm run format:check && npm run lint",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:integration": "cd src-tauri && cargo test --test integration",
    "coverage:check": "vitest --coverage --run && node scripts/check-coverage.js",
    "coverage:report": "vitest --coverage --reporter=html",
    "performance:test": "cd src-tauri && cargo bench",
    "performance:profile": "cd src-tauri && cargo bench --bench pairing_performance -- --profile-time=10",
    "db:test": "cd src-tauri && cargo test --test integration",
    "db:migrate": "cd src-tauri && sqlx migrate run --database-url sqlite:pawn.sqlite",
    "db:reset": "rm -f ~/.local/share/pawn/db/pawn.sqlite && npm run db:migrate",
    "security:audit": "npm run security:audit:frontend && npm run security:audit:backend",
    "security:audit:frontend": "yarn audit --level moderate",
    "security:audit:backend": "cd src-tauri && cargo audit",
    "security:fix": "yarn audit --fix",
    "badges:check": "node scripts/check-badges.js",
    "quality:check": "npm run format:all:check && npm run lint && npm run type-check && npm run test:coverage && npm run performance:test",
    "quality:fix": "npm run format:all && npm run lint:fix && npm run type-check",
    "commit:frontend": "FRONTEND_ONLY=1 git commit",
    "commit:backend": "SKIP_FRONTEND_TESTS=1 git commit", 
    "commit:no-backend": "SKIP_BACKEND_TESTS=1 git commit",
    "commit:no-integration": "SKIP_INTEGRATION_TESTS=1 git commit"
  },
  "dependencies": {
    "@ag-grid-community/client-side-row-model": "^32.1.0",
    "@ag-grid-community/core": "^32.1.0",
    "@ag-grid-community/csv-export": "^32.1.0",
    "@ag-grid-community/infinite-row-model": "^32.1.0",
    "@ag-grid-community/react": "^32.1.0",
    "@ag-grid-community/styles": "^32.1.0",
    "@emotion/babel-plugin": "^11.12.0",
    "@emotion/react": "^11.13.3",
    "@emotion/styled": "^11.13.0",
    "@fontsource/roboto": "^5.0.14",
    "@hookform/resolvers": "^3.9.0",
    "@mui/icons-material": "^6.0.1",
    "@mui/lab": "^6.0.0-beta.10",
    "@mui/material": "^6.0.1",
    "@mui/styled-engine-sc": "^6.0.1",
    "@mui/x-data-grid": "^8.8.0",
    "@mui/x-date-pickers": "^7.15.0",
    "@reduxjs/toolkit": "^2.2.7",
    "@tauri-apps/api": "^2.3.0",
    "@tauri-apps/plugin-opener": "^2",
    "ag-grid-react": "^32.1.0",
    "better-sqlite3": "^11.2.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "i18next": "^23.14.0",
    "i18next-browser-languagedetector": "^8.0.0",
    "i18next-http-backend": "^2.6.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-i18next": "^15.0.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.1",
    "redux": "^5.0.1",
    "styled-components": "^6.1.13",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.54.1",
    "@tauri-apps/cli": "^2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.31.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.2.10",
    "msw": "^2.10.4",
    "playwright": "^1.54.1",
    "prettier": "^3.6.2",
    "typescript": "~5.6.2",
    "vite": "^6.2.7",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "src-tauri/src/**/*.rs": [
      "cd src-tauri && cargo fmt --"
    ]
  },
  "resolutions": {
    "@babel/runtime": "7.27.6",
    "esbuild": "0.25.0"
  }
}
